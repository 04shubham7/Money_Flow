<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input for Total Salary -->
    <EditText
        android:id="@+id/input_total_salary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Total Salary/Amount"
        android:inputType="number" />

    <!-- Input for Total Expenses -->
    <EditText
        android:id="@+id/input_total_expenses"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Total Expenses"
        android:inputType="number" />

    <!-- Input for Needs Allocation -->
    <EditText
        android:id="@+id/input_needs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Needs Allocation"
        android:inputType="number" />

    <!-- Input for Wants Allocation -->
    <EditText
        android:id="@+id/input_wants"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Wants Allocation"
        android:inputType="number" />

    <!-- Input for Savings -->
    <EditText
        android:id="@+id/input_savings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Savings"
        android:inputType="number" />

    <!-- Display Remaining Balance -->
    <TextView
        android:id="@+id/text_remaining_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Remaining Balance: $0"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Save Button -->
    <Button
        android:id="@+id/button_save_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save Plan" />
</LinearLayout>